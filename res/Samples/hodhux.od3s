// disable unit checking
:disableUnits

// setup the repo
:addRepo ../res/Samples/repo

// import our modules
import SimTests.HodHux.*

// :show all
//:show modState

// set sim params
:startTime 0
:stopTime 60.001
:timestep 0.001
:period 0.01
:output "./output.bin"

// sim backend params
:solver "euler"
// linker - dynamic, static
:linker "dynamic"
// disable exe
:disableExecute
// disable opts
//:disableOptimise
// disable short-circuiting
//:disableShortCircuit
// disable power expan
//:disablePowerExpan
// math model - strict, fast
:mathModel "fast"
// vecmath enable?
//:vecMath
:mathLib "gnu"
// backend to use - interpreter, jitcompiler, aotcompiler, objectfile
:backend "objectfile"

// adaptive params
:relError 1e-4
:absError 1e-6
:modelType "stiff"
:maxTimestep 0.25

// all done
:simulate HodHux
:quit

