// based on table 18-1, pg 169
component ex1(t) {
    y1 = ode { init: 2, delta: (y1 - t) };
    return (t)
}

// based on table 18-2, pg 170
component ex2(t) {
    y2 = ode { init: 1, delta: y2 };
    return (t)
}

// based on table 18-3, pg 171
component ex3(t) {
    y3 = ode { init: 0, delta: (pow(y3,2) + 1) };
    return (t)
}

